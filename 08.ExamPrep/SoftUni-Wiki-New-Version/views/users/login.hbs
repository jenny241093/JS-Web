<section>
  <h2>Login</h2>
  <div class="spacer">
    <form method="POST" action="/login">
      <label>Username:</label>
      <input type="text" name="username" value="{{username}}">
      <label>Password:</label>
      <input type="password" name="password" value="{{password}}">
      <input type="submit" value="Login">
    </form>
  </div>
</section>